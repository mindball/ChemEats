@page "/upload-menu"
@using Shared.DTOs.Suppliers
@inherits UploadMenuBase

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0"><i class="bi bi-cloud-upload me-2"></i>Upload Menu</h3>
    </div>

    @if (IsLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ErrorMessage
            <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
        </div>
    }
    else if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@SuccessMessage
            <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-shop me-1"></i>Supplier <span class="text-danger">*</span>
                    </label>
                    <select class="form-select" @bind="SelectedSupplierId">
                        <option value="">Select supplier...</option>
                        @foreach (SupplierDto supplier in Suppliers)
                        {
                            <option value="@supplier.Id">@supplier.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-calendar-event me-1"></i>Menu Date <span class="text-danger">*</span>
                    </label>
                    <input type="date" class="form-control" @bind="SelectedDate" />
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-clock me-1"></i>Active Until (Today) <span class="text-danger">*</span>
                    </label>
                    <input type="time" class="form-control"
                           min="08:00" max="16:00" step="1800"
                           value="@ActiveUntilTimeString"
                           @onchange="@(e => ActiveUntilTimeString = e.Value?.ToString() ?? "12:00")" />
                    <div class="form-text">
                        <i class="bi bi-info-circle me-1"></i>Menu will be active until <strong>@ComputedActiveUntil.ToString("dd.MM.yyyy HH:mm")</strong> (Today 08:00-16:00)
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-spreadsheet me-2"></i>CSV File Upload</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-upload me-1"></i>Select CSV File <span class="text-danger">*</span>
                        </label>
                        <InputFile OnChange="HandleFileSelected"
                                   class="form-control"
                                   accept=".csv" />
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>Expected format: Name,Price (one meal per line)
                        </div>
                    </div>

                    @if (ParsedMeals.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>@ParsedMeals.Count</strong> meal(s) loaded from CSV
                        </div>
                    }
                </div>
            </div>

            @if (ParsedMeals.Any())
            {
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Parsed Meals Preview</h5>
                            <span class="badge bg-primary rounded-pill">@ParsedMeals.Count items</span>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (CsvMealRow meal in ParsedMeals)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-egg-fried me-2 text-primary"></i>
                                        <strong>@meal.Name</strong>
                                    </div>
                                    <span class="badge bg-success">@meal.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            }

            <div class="d-flex justify-content-end gap-2">
                <button type="button" class="btn btn-secondary px-4" @onclick="ResetForm">
                    <i class="bi bi-x-circle me-2"></i>Reset
                </button>
                <button type="button"
                        class="btn btn-primary px-4"
                        @onclick="HandleUploadAsync"
                        disabled="@IsSubmitting">
                    @if (IsSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Uploading...</span>
                    }
                    else
                    {
                        <i class="bi bi-cloud-upload me-2"></i>
                        <span>Upload Menu</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>