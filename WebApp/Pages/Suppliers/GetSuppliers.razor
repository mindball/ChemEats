@page "/get-suppliers"
@inherits GetSuppliersBase

<AuthorizeView>
    <Authorized>
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0"><i class="bi bi-shop me-2"></i>Suppliers List</h3>
            </div>

            @if (Suppliers.Count == 0)
            {
                <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading suppliers...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-header bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">
                                <i class="bi bi-list-check me-2"></i>All Suppliers (@Suppliers.Count)
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="table-light">
                                    <tr class="text-center">
                                        <th class="text-start ps-3">
                                            <i class="bi bi-building me-1"></i>Name
                                        </th>
                                        <th>
                                            <i class="bi bi-receipt me-1"></i>VAT Number
                                        </th>
                                        <th>
                                            <i class="bi bi-credit-card me-1"></i>Payment Terms
                                        </th>
                                        <th>
                                            <i class="bi bi-envelope me-1"></i>Email
                                        </th>
                                        <th style="width: 200px">
                                            <i class="bi bi-gear me-1"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (SupplierDto supplier in Suppliers)
                                    {
                                        <tr>
                                            <td class="fw-semibold ps-3">@supplier.Name</td>
                                            <td class="text-center">@supplier.VatNumber</td>
                                            <td class="text-center">
                                                <span class="badge bg-info text-dark">@supplier.PaymentTerms</span>
                                            </td>
                                            <td class="text-center">@supplier.Email</td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button class="btn btn-outline-primary"
                                                            @onclick="() => ViewSupplier(supplier)"
                                                            title="View details">
                                                        <i class="bi bi-eye-fill"></i>
                                                    </button>
                                                    <button class="btn btn-outline-warning"
                                                            @onclick="() => UpdateSupplier(supplier)"
                                                            title="Edit supplier">
                                                        <i class="bi bi-pencil-fill"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger"
                                                            @onclick="() => DeleteSupplierAsync(supplier)"
                                                            title="Delete supplier">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (IsViewModalOpen && SelectedSupplier != null)
            {
                <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0, 0, 0, 0.5);">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-light">
                                <h5 class="modal-title">
                                    <i class="bi bi-building me-2"></i>@SelectedSupplier.Name
                                </h5>
                                <button type="button" class="btn-close" @onclick="CloseViewModal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Basic Information</h6>
                                    </div>
                                    <div class="card-body">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">
                                                <i class="bi bi-receipt me-1"></i>VAT Number
                                            </dt>
                                            <dd class="col-sm-8">@SelectedSupplier.VatNumber</dd>

                                            <dt class="col-sm-4">
                                                <i class="bi bi-credit-card me-1"></i>Payment Terms
                                            </dt>
                                            <dd class="col-sm-8">
                                                <span class="badge bg-info text-dark">@SelectedSupplier.PaymentTerms</span>
                                            </dd>
                                        </dl>
                                    </div>
                                </div>

                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="bi bi-telephone me-2"></i>Contact Information</h6>
                                    </div>
                                    <div class="card-body">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">
                                                <i class="bi bi-envelope me-1"></i>Email
                                            </dt>
                                            <dd class="col-sm-8">@SelectedSupplier.Email</dd>

                                            <dt class="col-sm-4">
                                                <i class="bi bi-phone me-1"></i>Phone
                                            </dt>
                                            <dd class="col-sm-8">@SelectedSupplier.Phone</dd>
                                        </dl>
                                    </div>
                                </div>

                                <div class="card mb-3">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Address Information</h6>
                                    </div>
                                    <div class="card-body">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">
                                                <i class="bi bi-signpost me-1"></i>Street Address
                                            </dt>
                                            <dd class="col-sm-8">@SelectedSupplier.StreetAddress</dd>

                                            <dt class="col-sm-4">
                                                <i class="bi bi-building me-1"></i>City
                                            </dt>
                                            <dd class="col-sm-8">@SelectedSupplier.City</dd>

                                            <dt class="col-sm-4">
                                                <i class="bi bi-mailbox me-1"></i>Postal Code
                                            </dt>
                                            <dd class="col-sm-8">@SelectedSupplier.PostalCode</dd>

                                            <dt class="col-sm-4">
                                                <i class="bi bi-globe me-1"></i>Country
                                            </dt>
                                            <dd class="col-sm-8">@SelectedSupplier.Country</dd>
                                        </dl>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Menus</h6>
                                    </div>
                                    <div class="card-body">
                                        @if (SelectedSupplier.Menus?.Any() == true)
                                        {
                                            <ul class="list-group list-group-flush">
                                                @foreach (MenuDto menu in SelectedSupplier.Menus)
                                                {
                                                    <li class="list-group-item">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <i class="bi bi-calendar3 me-2 text-primary"></i>
                                                                <strong>@menu.Date.ToShortDateString()</strong>
                                                            </div>
                                                            <span class="badge bg-primary rounded-pill">@menu.Meals.Count meals</span>
                                                        </div>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <div class="text-muted text-center py-3">
                                                <i class="bi bi-inbox me-2"></i>No menus available
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" @onclick="CloseViewModal">
                                    <i class="bi bi-x-circle me-2"></i>Close
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>