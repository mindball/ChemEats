@page "/orders/my"
@using Shared.DTOs.Orders
@inherits MyOrdersBase

<h3 class="mb-3"><i class="bi bi-card-list me-2"></i>My Orders</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
else
{
    <div class="row mb-3">
        <div class="col-md-3">
            <label class="form-label">Start date</label>
            <input type="date" class="form-control" @bind="StartDate" />
        </div>

        <div class="col-md-3">
            <label class="form-label">End date</label>
            <input type="date" class="form-control" @bind="EndDate" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Supplier</label>
            <select class="form-select" @bind="SelectedSupplierId">
                <option value="">All suppliers</option>
                @foreach ((Guid SupplierId, string SupplierName) s in AvailableSuppliers)
                {
                    <option value="@s.SupplierId">@s.SupplierName</option>
                }
            </select>
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <div class="form-check me-3">
                <input class="form-check-input" type="checkbox" id="includeDeleted" @bind="IncludeDeleted"/>
                <label class="form-check-label" for="includeDeleted">deleted</label>
            </div>
            <button class="btn btn-primary w-100" @onclick="LoadOrdersAsync">Apply</button>
        </div>
    </div>

    @if (Orders is null || !Orders.Any())
    {
        <div class="text-muted">No orders found for the selected criteria.</div>
    }
    else
    {
        decimal totalNet = Orders.Sum(o => o.NetAmount);
        decimal totalPortionApplied = Orders.Where(o => o.PortionApplied).Sum(o => o.PortionAmount);

        <ul class="list-group mb-3">
            @foreach (UserOrderItemDto item in Orders)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">
                            @item.MealName

                            @if (item.IsDeleted)
                            {
                                <span class="badge text-bg-danger ms-2">Deleted</span>
                            }
                            else if (string.Equals(item.Status, "Completed", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge text-bg-success ms-2">Completed</span>
                            }
                            else if (string.Equals(item.Status, "Cancelled", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge text-bg-warning ms-2">Cancelled</span>
                            }
                            else if (string.Equals(item.Status, "Pending", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge text-bg-info ms-2">Pending</span>
                            }
                        </div>
                        <small class="text-muted">
                            @item.SupplierName —
                            Menu: @FormatBulgarianDate(item.MenuDate) •
                            Order: @FormatBulgarianDate(item.Date) •
                            @item.Status
                        </small>
                    </div>
                    <div class="text-end">
                        <div>Price: @item.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
                        @if (item.PortionApplied)
                        {
                            <div class="text-success">- Portion: @item.PortionAmount.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
                        }
                        <div class="fw-bold">Net: @item.NetAmount.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
                    </div>
                </li>
            }
        </ul>

        <div class="d-flex justify-content-between align-items-center mb-1">
            <div class="fw-bold">Total portion applied</div>
            <div class="fw-bold text-success">-@totalPortionApplied.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="fw-bold">Total to pay</div>
            <div class="fw-bold">@totalNet.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
        </div>
    }
}