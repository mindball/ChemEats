@page "/menus/view"
@inherits ViewMenuBase

<h3>Menus List</h3>

<div class="row mb-3">
    <div class="col-md-3">
        <label class="form-label">Supplier:</label>
        <select class="form-select" @bind="SelectedSupplierId">
            <option value="">All</option>
            @foreach (SupplierDto supplier in Suppliers)
            {
                <option value="@supplier.Id">@supplier.Name</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label">Start Date:</label>
        <input type="date" class="form-control" @bind="StartDate"/>
    </div>

    <div class="col-md-3">
        <label class="form-label">End Date:</label>
        <input type="date" class="form-control" @bind="EndDate"/>
    </div>

    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-primary w-100" @onclick="OnSearchClickedAsync">
            <i class="bi bi-search"></i> Search
        </button>
    </div>
</div>

@if (ErrorMessage is not null)
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
else if (IsLoading)
{
    <p>Loading menus...</p>
}
else if (Menus is null || !Menus.Any())
{
    <p>No menus found for the selected filters.</p>
}
else
{
    <table class="table table-sm table-striped table-bordered w-100">
        <thead class="table-light">
        <tr class="align-middle text-center">
            <th>Supplier</th>
            <th>Date</th>
            <th>Meals</th>
        </tr>
        </thead>
        <tbody>
        @foreach (MenuDto menu in Menus)
        {
            <tr class="align-middle">
                <td>@menu.SupplierName</td>
                <td>@FormatBulgarianDate(menu.Date)</td>
                <td>
                    @if (menu.Meals.Any())
                    {
                        <ul class="mb-0">
                            @foreach (MealDto meal in menu.Meals)
                            {
                                <li>@meal.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No meals</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>

    <nav class="mt-3 d-flex justify-content-between align-items-center">
        <div>
            Showing @((CurrentPage - 1) * PageSize + 1)
            -
            @(Math.Min(CurrentPage * PageSize, TotalMenus))
            of @TotalMenus menus
        </div>

        <ul class="pagination mb-0">
            <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                <button class="page-link" @onclick="() => GoToPageAsync(CurrentPage - 1)">Previous</button>
            </li>

            @for (int i = 1; i <= TotalPages; i++)
            {
                int pageNumber = i; // capture local variable

                <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                    <button type="button" class="page-link" @onclick="async () => await GoToPageAsync(pageNumber)">
                        @pageNumber
                    </button>
                </li>
            }

            <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                <button class="page-link" @onclick="() => GoToPageAsync(CurrentPage + 1)">Next</button>
            </li>
        </ul>
    </nav>
}