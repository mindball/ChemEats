@page "/admin/payments"
@using Shared.DTOs.Orders
@using Shared.Common.Enums
@using Shared.DTOs.Employees
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@inherits AdminPaymentsBase

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0"><i class="bi bi-cash-coin me-2"></i>Process Payments</h3>
    </div>

    @if (IsLoading && AllEmployees is null)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="bi bi-funnel me-2"></i>Search Filters
                </h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-person me-1"></i>Employee
                        </label>
                        <input type="text" 
                               class="form-control mb-2" 
                               placeholder="Search employee..."
                               @bind="SearchTerm"
                               @bind:event="oninput" />
                        <select class="form-select" @bind="SelectedUserId" size="5">
                            <option value="">-- Select employee --</option>
                            @if (FilteredEmployees is not null)
                            {
                                @foreach (EmployeeDto emp in FilteredEmployees)
                                {
                                    <option value="@emp.UserId">
                                        @emp.FullName (@emp.Abbreviation)
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-calendar-range me-1"></i>Start Date
                        </label>
                        <input type="date" class="form-control" @bind="StartDate" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-calendar-check me-1"></i>End Date
                        </label>
                        <input type="date" class="form-control" @bind="EndDate" />
                    </div>

                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-primary w-100" @onclick="SearchOrdersAsync" disabled="@IsLoading">
                            @if (IsLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            <i class="bi bi-search me-2"></i>Search
                        </button>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@ErrorMessage
                <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@SuccessMessage
                <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
            </div>
        }

        @if (AllOrders is not null)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-2">
                            <div class="card bg-light">
                                <div class="card-body text-center p-2">
                                    <div class="fw-bold text-primary fs-5">@TotalOrders</div>
                                    <small class="text-muted">Total Orders</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="card bg-success bg-opacity-10">
                                <div class="card-body text-center p-2">
                                    <div class="fw-bold text-success fs-5">@PaidOrders</div>
                                    <small class="text-muted">Paid</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="card bg-danger bg-opacity-10">
                                <div class="card-body text-center p-2">
                                    <div class="fw-bold text-danger fs-5">@UnpaidOrders</div>
                                    <small class="text-muted">Unpaid</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success bg-opacity-10">
                                <div class="card-body text-center p-2">
                                    <div class="fw-bold text-success fs-5">@TotalPaid.ToString("C", System.Globalization.CultureInfo.CurrentCulture)
                                    </div>
                                    <small class="text-muted">Total Paid Amount</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger bg-opacity-10">
                                <div class="card-body text-center p-2">
                                    <div class="fw-bold text-danger fs-5">@TotalUnpaid.ToString("C", System.Globalization.CultureInfo.CurrentCulture)
                                    </div>
                                    <small class="text-muted">Total Unpaid Amount</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-funnel me-1"></i>Filter by Payment Status
                        </label>
                        <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="paymentStatus" id="statusAll" value="All"
                                   checked="@(PaymentStatusFilter == "All")"
                                   @onchange="@(() => PaymentStatusFilter = "All")" />
                            <label class="btn btn-outline-primary" for="statusAll">All (@TotalOrders)</label>

                            <input type="radio" class="btn-check" name="paymentStatus" id="statusUnpaid" value="Unpaid"
                                   checked="@(PaymentStatusFilter == "Unpaid")"
                                   @onchange="@(() => PaymentStatusFilter = "Unpaid")" />
                            <label class="btn btn-outline-danger" for="statusUnpaid">Unpaid (@UnpaidOrders)</label>

                            <input type="radio" class="btn-check" name="paymentStatus" id="statusPaid" value="Paid"
                                   checked="@(PaymentStatusFilter == "Paid")"
                                   @onchange="@(() => PaymentStatusFilter = "Paid")" />
                            <label class="btn btn-outline-success" for="statusPaid">Paid (@PaidOrders)</label>
                        </div>
                    </div>
                </div>
            </div>

            @if (FilteredOrders.Count > 0)
            {
                <div class="card">
                    <div class="card-header bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">
                                <i class="bi bi-list-check me-2"></i>Orders (@FilteredOrders.Count)
                            </span>
                            <div class="d-flex gap-2 align-items-center">
                                <button class="btn btn-sm btn-outline-primary" @onclick="SelectAll">
                                    <i class="bi bi-check-all me-1"></i>Select All Unpaid
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="DeselectAll">
                                    <i class="bi bi-x-lg me-1"></i>Deselect All
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 40px;"></th>
                                    <th><i class="bi bi-egg-fried me-1"></i>Meal</th>
                                    <th><i class="bi bi-shop me-1"></i>Supplier</th>
                                    <th><i class="bi bi-calendar-event me-1"></i>Menu Date</th>
                                    <th><i class="bi bi-clock me-1"></i>Ordered At</th>
                                    <th class="text-end"><i class="bi bi-tag me-1"></i>Price</th>
                                    <th class="text-end"><i class="bi bi-percent me-1"></i>Portion</th>
                                    <th class="text-end"><i class="bi bi-cash me-1"></i>Net</th>
                                    <th class="text-center"><i class="bi bi-credit-card me-1"></i>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (UserOrderPaymentItemDto item in FilteredOrders)
                                {
                                    bool isSelected = SelectedOrderIds.Contains(item.OrderId);
                                    bool isPaid = item.PaymentStatus == PaymentStatusDto.Paid;
                                    string rowClass = isPaid ? "table-success" : (isSelected ? "table-primary" : "");

                                    <tr class="@rowClass">
                                        <td>
                                            <input type="checkbox" class="form-check-input"
                                                   checked="@isSelected"
                                                   disabled="@isPaid"
                                                   @onchange="@(e => ToggleOrderSelection(item.OrderId, e.Value is true))" />
                                        </td>
                                        <td class="fw-semibold">@item.MealName</td>
                                        <td>@item.SupplierName</td>
                                        <td><small>@FormatBulgarianDate(item.MenuDate)</small></td>
                                        <td><small>@FormatBulgarianDate(item.OrderedAt)</small></td>
                                        <td class="text-end">@item.Price.ToString("F2") лв.</td>
                                        <td class="text-end">
                                            @if (item.PortionApplied)
                                            {
                                                <span class="text-success">-@item.PortionAmount.ToString("F2") лв.</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td class="text-end fw-bold">@item.NetAmount.ToString("F2") лв.</td>
                                        <td class="text-center">
                                            @if (isPaid)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Paid
                                                    @if (item.PaidOn.HasValue)
                                                    {
                                                        <small class="d-block">@item.PaidOn.Value.ToString("dd.MM.yyyy")</small>
                                                    }
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-exclamation-circle me-1"></i>Unpaid
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-semibold">Selected:</span>
                                <span class="badge bg-primary rounded-pill ms-1">@SelectedOrderIds.Count</span>
                                <span class="mx-2">|</span>
                                <span class="fw-bold">Total to pay:</span>
                                <span class="fw-bold text-primary fs-5 ms-1">@SelectedTotal.ToString("F2") лв.</span>
                            </div>
                            <button class="btn btn-success px-4" 
                                    @onclick="MarkSelectedAsPaidAsync"
                                    disabled="@(!HasSelection || IsProcessing)">
                                @if (IsProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Processing...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-2"></i>
                                    <span>Mark as Paid</span>
                                }
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No orders match the selected filters.
                </div>
            }
        }
    }
</div>
