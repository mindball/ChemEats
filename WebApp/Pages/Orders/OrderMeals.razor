@page "/menus/order"
@using System.Globalization
@using Shared.DTOs.Orders
@inherits OrderMealsBase

<h3 class="mb-3"><i class="bi bi-cart-fill me-2"></i>Order Meals</h3>

@if (IsLoading)
{
    <p>Loading menus...</p>
}
else if (ErrorMessage is not null)
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
else if (Menus is null || !Menus.Any())
{
    <p>No menus available.</p>
}
else
{
    <div class="row mb-3">
        <div class="col-md-4">
            <label class="form-label">Filter by Date</label>
            <input type="date" class="form-control"
                   @bind="FilterDate"
                   @bind:format="yyyy-MM-dd" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Filter by Supplier</label>
            <select class="form-select" @bind="SelectedSupplierId">
                <option value="">-- All suppliers --</option>
                @foreach ((Guid Id, string Name) s in SuppliersForFilter)
                {
                    <option value="@s.Id">@s.Name</option>
                }
            </select>
        </div>
        <div class="col-md-4 d-flex align-items-end justify-content-end">
            <div class="text-end">
                <div>
                    <strong>Total items:</strong> @SelectedItemsCount
                </div>
                <div class="text-muted">Selected meals across menus</div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            @foreach (MenuDto menu in FilteredMenus)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@menu.SupplierName</strong>
                            <div class="text-muted small">Menu: @FormatBulgarianDate(menu.Date)</div>
                        </div>
                        <div class="small text-muted">@menu.Meals.Count meal(s)</div>
                    </div>

                    <div class="card-body">
                        @if (!menu.Meals.Any())
                        {
                            <div class="text-muted">No meals</div>
                        }
                        else
                        {
                            <table class="table table-sm mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width:36px"></th>
                                        <th>Meal</th>
                                        <th class="text-end">Price</th>
                                        <th style="width:140px">Qty</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (MealDto meal in menu.Meals)
                                    {
                                        (Guid Id, DateTime Date) key = (meal.Id, menu.Date);
                                        <tr>
                                            <td>
                                                <input type="checkbox"
                                                       @onchange='e => ToggleSelection(key, e.Value is bool and true)'
                                                       checked="@IsSelected(key)" />
                                            </td>
                                            <td>@meal.Name</td>
                                            <td class="text-end">@meal.Price.ToString("C", CultureInfo.CurrentCulture)</td>
                                            <td>
                                                <div class="input-group" style="width:180px; flex-wrap:nowrap;">
                                                    <input type="number"
                                                           min="0"
                                                           style="width:80px; text-align:center;"
                                                           class="form-control quantity-input"
                                                           value="@GetQuantity(key)"
                                                           @oninput="@(e => UpdateQuantity(key, e.Value?.ToString() ?? "0"))" />
                                                    <button class="btn btn-outline-secondary" type="button" style="width:50px"
                                                            @onclick="() => UpdateQuantity(key, (GetQuantity(key) + 1).ToString())"
                                                            @onclick:preventDefault="true"
                                                            @onclick:stopPropagation="true">
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                    <button class="btn btn-outline-secondary" type="button" style="width:50px"
                                                            @onclick="() => UpdateQuantity(key, Math.Max(0, GetQuantity(key) - 1).ToString())"
                                                            disabled="@(GetQuantity(key) <= 0)"
                                                            @onclick:preventDefault="true"
                                                            @onclick:stopPropagation="true">
                                                        <i class="bi bi-dash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card mb-3 sticky-top" style="top:1rem;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <strong><i class="bi bi-list-check me-2"></i>Order summary</strong>
                    <span class="text-muted small">Portion applied once per day</span>
                </div>
                <div class="card-body">
                    @if (SelectedItemsCount == 0)
                    {
                        <div class="text-muted">No items selected</div>
                    }
                    else
                    {
                        var summary = BuildSummaryFromSelection();
                        var perDateTotals = ComputePerDateTotalsWithPortion(summary, PortionAmount);

                        decimal totalPrice = perDateTotals.Sum(x => x.Total);
                        decimal totalPortionApplied = perDateTotals.Sum(x => x.PortionApplied);

                        <ul class="list-group mb-2">
                            @foreach (var day in perDateTotals)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <div class="fw-bold">Date: @FormatBulgarianDate(day.Date)</div>
                                        <div class="text-end">
                                            <div>Subtotal: @day.Subtotal.ToString("C", CultureInfo.CurrentCulture)</div>
                                            <div class="text-success">- Portion: @day.PortionApplied.ToString("C", CultureInfo.CurrentCulture)</div>
                                            <div class="fw-bold">Total: @day.Total.ToString("C", CultureInfo.CurrentCulture)</div>
                                        </div>
                                    </div>
                                    <ul class="list-group list-group-flush mt-2">
                                        @foreach (SummaryItem item in day.Items)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div class="fw-bold">@item.Name</div>
                                                    <small class="text-muted">@item.SupplierName — Menu: @FormatBulgarianDate(item.MenuDate)</small>
                                                </div>
                                                <div class="text-end">
                                                    <div>@item.Quantity × @item.Price.ToString("C", CultureInfo.CurrentCulture)</div>
                                                    <div class="fw-bold">@((item.Price * item.Quantity).ToString("C", CultureInfo.CurrentCulture))</div>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                        </ul>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="fw-bold">Total portion applied</div>
                            <div class="fw-bold text-success">-@totalPortionApplied.ToString("C", CultureInfo.CurrentCulture)</div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="fw-bold">Total</div>
                            <div class="fw-bold">@totalPrice.ToString("C", CultureInfo.CurrentCulture)</div>
                        </div>
                    }

                    <button class="btn btn-primary w-100" @onclick="PlaceOrdersAsync" disabled="@(!CanPlaceOrder)">
                        <i class="bi bi-send-fill me-2"></i>Place Order
                    </button>

                    @if (MyOrders.Any())
                    {
                        <hr />
                        <div class="mt-2 mb-1">
                            <strong>Your persisted orders (today + future)</strong>
                        </div>
                        <ul class="list-group mb-2">
                            @foreach (UserOrderItemDto item in MyOrders)
                            {
                                bool canDelete = !string.Equals(item.Status, "Completed", StringComparison.OrdinalIgnoreCase)
                                && !string.Equals(item.Status, "Cancelled", StringComparison.OrdinalIgnoreCase)
                                && !item.IsDeleted;

                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-bold">
                                            @item.MealName
                                            @if (item.IsDeleted)
                                            {
                                                <span class="badge text-bg-secondary ms-2">Deleted</span>
                                            }
                                            else if (string.Equals(item.Status, "Completed", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <span class="badge text-bg-success ms-2">Completed</span>
                                            }
                                            else if (string.Equals(item.Status, "Cancelled", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <span class="badge text-bg-warning ms-2">Cancelled</span>
                                            }
                                            else
                                            {
                                                <span class="badge text-bg-info ms-2">Pending</span>
                                            }
                                        </div>
                                        <small class="text-muted">@item.SupplierName — Menu date: @FormatBulgarianDate(item.MenuDate) • Order at: @FormatBulgarianDate(item.OrderedAt) • @item.Status</small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">@item.Price.ToString("C", CultureInfo.CurrentCulture)</div>
                                        <div class="mt-2">
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => OnDeleteOrderItem(item)"
                                                    disabled="@(!canDelete)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }

                    @if (!string.IsNullOrEmpty(SuccessMessage))
                    {
                        <div class="alert alert-success mt-3 mb-0">@SuccessMessage</div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject] private IJSRuntime JSRuntime { get; set; } = null!;

    private async Task OnDeleteOrderItem(UserOrderItemDto item)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm",
            $"Delete order '{item.MealName}' (Menu: {item.MenuDate:dd.MM.yyyy}, Order: {item.OrderedAt:dd.MM.yyyy})?"))
            return;

        bool ok = await DeleteOrderByIdAsync(item.OrderId);
        if (!ok)
        {
            SuccessMessage = null;
            ErrorMessage = "Failed to delete order.";
            await InvokeAsync(StateHasChanged);
        }
    }

}