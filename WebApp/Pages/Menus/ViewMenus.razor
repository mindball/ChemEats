@page "/menus/view"
@using System.Globalization
@inherits ViewMenusBase
@inject IJSRuntime JSRuntime

<div class="container-fluid">
<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Menus List</h3>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">
            <i class="bi bi-funnel me-2"></i>Filters
        </h5>

        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label fw-semibold">
                    <i class="bi bi-shop me-1"></i>Supplier
                </label>
                <select class="form-select" @bind="SelectedSupplierId">
                    <option value="">All suppliers</option>
                    @foreach (SupplierDto supplier in Suppliers)
                    {
                        <option value="@supplier.Id">@supplier.Name</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">
                    <i class="bi bi-calendar-range me-1"></i>Start Date
                </label>
                <input type="date" class="form-control" @bind="StartDate"/>
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">
                    <i class="bi bi-calendar-check me-1"></i>End Date
                </label>
                <input type="date" class="form-control" @bind="EndDate"/>
            </div>

            <div class="col-md-3 d-flex align-items-end">
                <div class="w-100">
                    <div class="form-check form-switch mb-2">
                        <input class="form-check-input" type="checkbox" role="switch" id="includeDeleted" @bind="IncludeDeleted"/>
                        <label class="form-check-label" for="includeDeleted">
                            <i class="bi bi-trash me-1"></i>Include deleted
                        </label>
                    </div>
                    <button class="btn btn-primary w-100" @onclick="OnSearchClickedAsync">
                        <i class="bi bi-search me-2"></i>Search
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ErrorMessage is not null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@ErrorMessage
        <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
    </div>
}
else if (IsLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading menus...</span>
        </div>
    </div>
}
else if (Menus is null || !Menus.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No menus found for the selected filters.
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <span class="fw-semibold">
                    <i class="bi bi-list-check me-2"></i>Found Menus (@TotalMenus)
                </span>
                <span class="text-muted small">
                    Showing @((CurrentPage - 1) * PageSize + 1) - @(Math.Min(CurrentPage * PageSize, TotalMenus))
                </span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                    <tr class="text-center">
                        <th class="text-start ps-3">
                            <i class="bi bi-shop me-1"></i>Supplier
                        </th>
                        <th>
                            <i class="bi bi-calendar3 me-1"></i>Date
                        </th>
                        <th>
                            <i class="bi bi-clock me-1"></i>Active Until
                        </th>
                        <th class="text-start">
                            <i class="bi bi-egg-fried me-1"></i>Meals
                        </th>
                        @if (IsAdmin)
                        {
                            <th style="width: 280px">
                                <i class="bi bi-gear me-1"></i>Actions
                            </th>
                        }
                        else
                        {
                            <th style="width: 100px">
                                <i class="bi bi-file-earmark-pdf me-1"></i>Report
                            </th>
                        }
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (MenuDto menu in Menus)
                    {
                        bool isExpired = menu.ActiveUntil < DateTime.Now;
                        bool isActive = !menu.IsDeleted && !isExpired;
                        bool isReportLoading = ReportLoadingMenuId == menu.Id;

                        <tr class="@(menu.IsDeleted ? "table-danger" : isExpired ? "table-warning" : "")">
                            <td class="fw-semibold ps-3 @(menu.IsDeleted ? "text-decoration-line-through" : "")">
                                @menu.SupplierName
                            </td>
                            <td class="text-center @(menu.IsDeleted ? "text-decoration-line-through" : "")">
                                @FormatBulgarianDate(menu.Date)
                            </td>
                            <td class="text-center">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="@(menu.IsDeleted ? "text-decoration-line-through" : "")">
                                        <i class="bi bi-clock me-1"></i>
                                        <strong>@menu.ActiveUntil.ToString("dd.MM.yyyy HH:mm")</strong>
                                    </div>
                                    @if (!menu.IsDeleted)
                                    {
                                        @if (isExpired)
                                        {
                                            <span class="badge bg-warning text-dark mt-1">
                                                <i class="bi bi-exclamation-triangle me-1"></i>Expired
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success mt-1">
                                                <i class="bi bi-check-circle me-1"></i>Active
                                            </span>
                                        }
                                    }
                                </div>
                            </td>
                            <td>
                                @if (menu.Meals.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (MealDto meal in menu.Meals)
                                        {
                                            <li class="mb-1 @(menu.IsDeleted ? "text-decoration-line-through" : "")">
                                                <i class="bi bi-egg-fried me-2 text-primary"></i>
                                                <span>@meal.Name</span>
                                                <span class="text-muted ms-2">@meal.Price.ToString("C", CultureInfo.CurrentCulture)</span>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="bi bi-inbox me-1"></i>No meals
                                    </span>
                                }
                            </td>

                            @if (IsAdmin)
                            {
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button class="btn btn-outline-warning"
                                                disabled="@(menu.IsDeleted || isExpired)"
                                                @onclick="() => FinalizeMenuAsync(menu.Id)"
                                                title="@(isExpired ? "Cannot finalize expired menu" : "Finalize and complete all orders")">
                                            <i class="bi bi-check-circle me-1"></i>Finalize
                                        </button>

                                        <button class="btn btn-outline-primary"
                                                disabled="@(menu.IsDeleted || isExpired)"
                                                @onclick="() => EditDateAsync(menu.Id, menu.Date)"
                                                title="@(isExpired ? "Cannot edit expired menu" : "Edit date")">
                                            <i class="bi bi-pencil-fill me-1"></i>Edit
                                        </button>

                                        <button class="btn btn-outline-danger"
                                                disabled="@(menu.IsDeleted || isExpired)"
                                                @onclick="() => SoftDeleteAsync(menu.Id)"
                                                title="@(isExpired ? "Cannot delete expired menu" : "Soft delete")">
                                            <i class="bi bi-trash-fill me-1"></i>Delete
                                        </button>

                                        <button class="btn btn-outline-info"
                                                disabled="@(menu.IsDeleted || isReportLoading)"
                                                @onclick="() => DownloadReportAsync(menu.Id)"
                                                title="Download my orders report">
                                            @if (isReportLoading)
                                            {
                                                <span class="spinner-border spinner-border-sm" role="status"></span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-file-earmark-pdf"></i>
                                            }
                                        </button>
                                    </div>
                                </td>
                            }
                            @* else *@
                            @* { *@
                            @*     <td class="text-center"> *@
                            @*         <button class="btn btn-outline-info btn-sm" *@
                            @*                 disabled="@(menu.IsDeleted || isReportLoading)" *@
                            @*                 @onclick="() => DownloadReportAsync(menu.Id)" *@
                            @*                 title="Download my orders report for this menu"> *@
                            @*             @if (isReportLoading) *@
                            @*             { *@
                            @*                 <span class="spinner-border spinner-border-sm" role="status"></span> *@
                            @*             } *@
                            @*             else *@
                            @*             { *@
                            @*                 <i class="bi bi-file-earmark-pdf me-1"></i> *@
                            @*             } *@
                            @*         </button> *@
                            @*     </td> *@
                            @* } *@
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light">
            <nav class="d-flex justify-content-between align-items-center">
                <div class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Page @CurrentPage of @TotalPages
                </div>

                <ul class="pagination mb-0">
                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPageAsync(CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                    </li>

                    @for (int i = 1; i <= TotalPages; i++)
                    {
                        int pageNumber = i;
                        <li class="page-item @(CurrentPage == pageNumber ? "active" : "")">
                            <button type="button" class="page-link" @onclick="async () => await GoToPageAsync(pageNumber)">
                                @pageNumber
                            </button>
                        </li>
                    }

                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="() => GoToPageAsync(CurrentPage + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}
</div>