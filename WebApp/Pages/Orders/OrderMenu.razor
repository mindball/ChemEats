@page "/menus/order"
@inherits OrderMenuBase

<h3 class="mb-3"><i class="bi bi-cart-fill me-2"></i>Order Meals</h3>

@if (IsLoading)
{
    <p>Loading menus...</p>
}
else if (ErrorMessage is not null)
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
else if (Menus is null || !Menus.Any())
{
    <p>No menus available.</p>
}
else
{
    <div class="row mb-3">
        <div class="col-md-4">
            <label class="form-label">Filter by Date</label>
            <input type="date" class="form-control" @bind="FilterDate" />
        </div>
        <div class="col-md-8 d-flex align-items-end justify-content-end">
            <div class="text-end">
                <div><strong>Total items:</strong> @SelectedItemsCount</div>
                <div class="text-muted">Selected meals across menus</div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            @foreach (MenuDto menu in FilteredMenus)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@menu.SupplierName</strong>
                            <div class="text-muted small">@FormatBulgarianDate(menu.Date)</div>
                        </div>
                        <div class="small text-muted">@menu.Meals.Count meal(s)</div>
                    </div>

                    <div class="card-body">
                        @if (!menu.Meals.Any())
                        {
                            <div class="text-muted">No meals</div>
                        }
                        else
                        {
                            <table class="table table-sm mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width:36px"></th>
                                        <th>Meal</th>
                                        <th class="text-end">Price</th>
                                        <th style="width:140px">Qty</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var meal in menu.Meals)
                                    {
                                        var key = (meal.Id, menu.Date);
                                        <tr>
                                            <td>
                                                <input type="checkbox"
                                                       @onchange='(ChangeEventArgs e) => ToggleSelection(key, e.Value is bool b && b)'
                                                       checked="@IsSelected(key)" />
                                            </td>
                                            <td>@meal.Name</td>
                                            <td class="text-end">@meal.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</td>
                                            <td>
                                                <div class="input-group" style="max-width:140px">
                                                    <input type="number" min="0" class="form-control"
                                                           value="@GetQuantity(key)"
                                                           @oninput='(ChangeEventArgs e) => UpdateQuantity(key, e.Value?.ToString() ?? "0")' />
                                                    <button class="btn btn-outline-secondary" type="button"
                                                            @onclick="() => UpdateQuantity(key, (GetQuantity(key) + 1).ToString())"
                                                            @onclick:preventDefault="true"
                                                            @onclick:stopPropagation="true">
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                    <button class="btn btn-outline-secondary" type="button"
                                                            @onclick="() => UpdateQuantity(key, (Math.Max(0, GetQuantity(key) - 1)).ToString())"
                                                            disabled="@(GetQuantity(key) <= 0)"
                                                            @onclick:preventDefault="true"
                                                            @onclick:stopPropagation="true">
                                                        <i class="bi bi-dash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card mb-3 sticky-top" style="top:1rem;">
                <div class="card-header">
                    <strong><i class="bi bi-list-check me-2"></i>Order summary</strong>
                </div>
                <div class="card-body">
                    @* Pending selection summary *@
                    @if (SelectedItemsCount == 0)
                    {
                        <div class="text-muted">No items selected</div>
                    }
                    else
                    {
                        var flatMeals = Menus!
                        .SelectMany(m => m.Meals.Select(me => new { MenuDate = m.Date, SupplierName = m.SupplierName, Meal = me }))
                        .ToList();

                        var summary = Selected
                        .Select(kvp =>
                        {
                            var entry = flatMeals.FirstOrDefault(x => x.Meal.Id == kvp.Key.MealId && x.MenuDate == kvp.Key.Date);
                            return new
                            {
                                Name = entry?.Meal.Name ?? "Unknown",
                                SupplierName = entry?.SupplierName ?? "Unknown supplier",
                                Date = kvp.Key.Date,
                                Quantity = kvp.Value,
                                Price = entry?.Meal.Price ?? 0m,
                                LineTotal = (entry?.Meal.Price ?? 0m) * kvp.Value
                            };
                        })
                        .ToList();

                        decimal totalPrice = summary.Sum(x => x.LineTotal);

                        <ul class="list-group mb-2">
                            @foreach (var item in summary)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">@item.Name</div>
                                        <small class="text-muted">@item.SupplierName — @FormatBulgarianDate(item.Date)</small>
                                    </div>
                                    <div class="text-end">
                                        <div>@item.Quantity × @item.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
                                        <div class="fw-bold">@item.LineTotal.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
                                    </div>
                                </li>
                            }
                        </ul>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="fw-bold">Total</div>
                            <div class="fw-bold">@totalPrice.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
                        </div>
                    }

                    <button class="btn btn-primary w-100" @onclick="PlaceOrdersAsync" disabled="@(!CanPlaceOrder)">
                        <i class="bi bi-send-fill me-2"></i>Place Order
                    </button>

                    @* Persisted individual order items (today + future) *@
                    @if (MyOrders != null && MyOrders.Any())
                    {
                        <hr />
                        <div class="mt-2 mb-1"><strong>Your persisted orders (today + future)</strong></div>
                        <ul class="list-group mb-2">
                            @foreach (var item in MyOrders)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div>
                                        <div class="fw-bold">@item.MealName</div>
                                        <small class="text-muted">@item.SupplierName — @FormatBulgarianDate(item.Date) • @item.Status</small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">@item.Price.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</div>
                                        <div class="mt-2">
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => OnDeleteOrderItem(item)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }

                    @if (!string.IsNullOrEmpty(SuccessMessage))
                    {
                        <div class="alert alert-success mt-3 mb-0">@SuccessMessage</div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private async Task OnDeleteOrderItem(Shared.DTOs.Orders.UserOrderItemDto item)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"Delete order '{item.MealName}' on {item.Date:dd.MM.yyyy}?"))
            return;

        bool ok = await DeleteOrderByIdAsync(item.OrderId);
        if (!ok)
        {
            SuccessMessage = null;
            ErrorMessage = "Failed to delete order.";
            await InvokeAsync(StateHasChanged);
        }
    }

    [Inject] private IJSRuntime JSRuntime { get; set; } = null!;
}